{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "unused-imports", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended", // recomended Extensions for now
    "prettier"
  ],
  "rules": {
    "no-unused-vars": 0,
    "unused-imports/no-unused-imports": 2,
    "no-console": 0, // Warning about console.logs - 2 is Error and 0 is Off
    "prettier/prettier": 2 // Error when is not formatted through prettier
  }
}
